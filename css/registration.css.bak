*{
    margin:0;
    padding: auto;
    box-sizing: border-box;
    font-family: 'Poppins',sans-serif;
}
body{
    display: grid;
    height: 10vh;
    padding:10px;
    background-image: url(images/registrationBackground.jpeg);
    background-size: cover;
    background-repeat: no-repeat;
}
.container{  
    max-width: 500px;
    width:100%;
    background: #fff;
    padding: 25px 30px;
    margin: auto;
    border-radius: 5px;
    background-color:rgba(0,0,0,0.3);
    box-shadow: 2px 2px 15px;
}    
.container form .user-details{
    display:list-item;
    justify-content:space-betweens;
}
form .user-details .input-box{
    margin-bottom: 15px;
}
.user-details .input-box .details{
    display: block;
    font-weight: 500;
    margin-bottom: 5px;
}
.user-details .input-box input{
    height:40px;
    width:90%;
    outline: none;
    border-radius: 5px;
    border: 2px solid #ccc;
    padding-left: 20px;
    font-size: 16px;
}
select {
    border: 0 none;
    color: #FFFFFF;
    background: transparent;
    font-size: 20px;
    font-weight: bold;
    padding: 2px 10px;
    width: 378px;
    *width: 350px;
    *background: #0e0f0e;
  }
  
  #qualification {
    overflow: hidden;
    width: 350px;
    -moz-border-radius: 9px 9px 9px 9px;
    -webkit-border-radius: 9px 9px 9px 9px;
    border-radius: 9px 9px 9px 9px;
    box-shadow: 1px 1px 11px #141414;
    background: no-repeat scroll 319px 5px #edf3ed;
  }
  #position {
    overflow: hidden;
    width: 350px;
    -moz-border-radius: 9px 9px 9px 9px;
    -webkit-border-radius: 9px 9px 9px 9px;
    border-radius: 9px 9px 9px 9px;
    box-shadow: 1px 1px 11px #141414;
    background: no-repeat scroll 319px 5px #edf3ed;
  }
.btn{
	background-color: #4c8d4c;
	color: white;
	padding: 15px 20px;
	margin: 10px 0px;
	border: none;
	cursor: pointer;
	width: 90%;
	text:bold;
}
