*{
    margin:0;
    padding: auto;
    box-sizing: border-box;
    font-family: 'Poppins',sans-serif;
}
body{
    display:grid;
    height: 14vh;
	margin-bottom: 10px;
	padding-bottom:10px;
	background-image: url(images/loginBackground.jpg);
    background-size: cover;
    background-position: center;
    font-family: sans-serif;
}
.background{
    width: 430px;
    height: 520px;
    position: absolute;
    transform: translate(-50%,-50%);
    left: 50%;
    top: 50%;
}
.container
{
-webkit-box-shadow: 3px 10px 23px 0px rgba(0,0,0,0.75);
-moz-box-shadow: 3px 10px 23px 0px rgba(0,0,0,0.75);
box-shadow: 3px 10px 23px 0px rgba(0,0,0,0.75);
}
form{
    height: 500px;
    width: 400px;
    background-color: rgba(255,255,255,0.13);
    position: absolute;
    transform: translate(-50%,-50%);
    top: 30%;
    left: 50%;
    border-radius: 10px;
    backdrop-filter: blur(10px);
    border: 2px solid rgba(255,255,255,0.1);
    box-shadow: 0 0 40px rgba(8,7,16,0.6);
    padding: 50px 35px;
}

form *{
    font-family: 'Poppins',sans-serif;
    color: #ffffff;
    letter-spacing: 0.5px;
    outline: none;
    border: none;
}
form h3{
    font-size: 32px;
    font-weight: 500;
    line-height: 42px;
    text-align: center;
}

form p{
    display: block;
    margin-top: 30px;
    font-size: 16px;
    font-weight: 500;
}
input{
    display: block;
    height: 50px;
    width: 100%;
    background-color: rgba(255,255,255,0.07);
    border-radius: 3px;
    padding: 0 10px;
    margin-top: 8px;
    font-size: 14px;
    font-weight: 300;
}
::placeholder{
    color: #e5e5e5;
}
a {
	color: #333;
	font-size: 14px;
	text-decoration: none;
	margin: 15px 0;
}

button {
    text-align: center; 
    margin-top: 50px;
    width: 100%;
	border-radius: 20px;
	border: 1px solid #0a0a0a;
	background-color: #f5efef;
	color: #FFFFFF;
	font-size: 12px;
	font-weight: bold;
	padding: 12px 45px;
	letter-spacing: 1px;
	text-transform: uppercase;
	transition: transform 80ms ease-in;

}
button:active {
	transform: scale(0.95);
}

button:focus {
	outline: none;
}

button.ghost {
	background-color: transparent;
	border-color: #FFFFFF;
}